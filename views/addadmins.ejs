  <main style="margin-top: 58px">
    <div class="container pt-4">
        <section class="mb-4">
            <div class="card">
              <div class="card-header text-center py-3">
                <h5 class="mb-0 text-center">
                  ADD ADMINS
                </h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover text-nowrap">
                      <form action="/admin/add_admin" method="post">
                        <div class="form-outline mb-4">
                            <input type="text" name="adminemail" class="form-control" required/>
                            <label class="form-label" >Enter Admin Email ID</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" name="password" class="form-control" required/>
                            <label class="form-label" >Enter password</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" name="confirmpassword" class="form-control" required/>
                            <label class="form-label" >Confirm Password</label>
                        </div>
                      
                        <div>
                            <button type="submit"  class="btn btn-primary btn-block mb-4">Add Admin</button>
                            <h6 style="font-weight: bold;color: rgb(246, 70, 70);"><%=msg%></h6>
                        </div>
                      </form>
                  </table>
                </div>
              </div>
            </div>

            <div class="card" style="margin-top: 20px;">
                <div class="card-header text-center py-3">
                  <h5 class="mb-0 text-center">
                    Show all Admins
                  </h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <th scope="col">S NO</th>
                            <th scope="col">Admin Email</th>
                            <th scope="col">Delete</th>
                        </thead>
                        <tbody id="notice-table">
                          <% admindata.map((item,index)=>{ %>
                              <tr>
                                <td scope="row"><%=index+1%></td>
                                <td scope="row"><%=item.adminemail%></td>
                                <td scope="row"><a href="/admin/delete_admin?adminemail=<%=item.adminemail%>" class="btn btn-danger">DELETE</a></td>
                              </tr>
                            <% }) %>
                        </tbody>
                    </table>
                  </div>
                </div>
              </div>
          </section>
    </div>
