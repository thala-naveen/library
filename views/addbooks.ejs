                <h5 class="mb-0 text-center">
                  <strong>Add books csv</strong>
                </h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover text-nowrap" id="user-table">
                    <thead>
                      <tr>
                        <th scope="col">File</th>
                        <th scope="col">Choose file</th>
                        <th scope="col">Upload</th>
                        <th scope="col">Status</th>
                      </tr>
                    </thead>
                    <tbody>
                       <tr>
                        <form action="/admin/add_book_file" method="post" enctype="multipart/form-data">
                            <td scope="col">
                                <strong>Books.csv<br><a href="https://docs.google.com/spreadsheets/d/1SK4pajlc9ijr1WwFbZpfYuhQMvuzTFQiI6mAkQEA6LY/edit?usp=sharing" target="_blank">Books.csv</a></strong>
                            </td>
                            <td>
                                <input type="file" name="file" accept="csv" class="form-control" placeholder="Add Book file" required/>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary" name="issue" value="upload" id="issue-upload-id">Upload</button>
                            </td>
                        </form>  
                           <td>

                           </td>
                           <td>
                                <h6 style="font-weight: bold;color: red;"><%=msg%></h6>
                           </td>
                       </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <div>
            <div class="card">
              <div class="card-header text-center py-3">
                <h5 class="mb-0 text-center">
                  <strong>Books</strong>
                </h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover text-nowrap" id="book-table">
                    <thead>
                      <tr>
                        <th scope="col">Barcode</th>
                        <th scope="col">Author</th>
                        <th scope="col">title</th>
                        <th scope="col">Subject</th>
                        <th scope="col">volume</th>
                        <th scope="col">publisher</th>
                        <th scope="col">copyright</th>
                        <th scope="col">Pages</th>
                        <th scope="col">Classification Num</th>
                        <th scope="col">Lang</th>
                        <th scope="col">Section</th>
                        <th scope="col">book Type</th>
                        <th scope="col">Source of purchase</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% data.map((item)=>{  %>
                        <tr>
                            <td scope="row"><%=item.barcode%></td>
                            <td scope="row"><%=item.author%></td>
                            <td scope="row"><%=item.title%></td>
                            <td scope="col"><%=item.subject%></td>
                            <td scope="row"><%=item.volume%></td>
                            <td scope="row"><%=item.publisher%></td>
                            <td scope="row"><%=item.copyright%></td>
                            <td scope="row"><%=item.pages%></td>
                            <td scope="row"><%=item.classificationnumber%></td>
                            <td scope="row"><%=item.language%></td>
                            <td scope="row"><%=item.section%></td>
                            <td scope="row"><%=item.booktype%></td>
                            <td scope="row"><%=item.sourceofpurchase%></td>
                        </tr>
                        <% }) %>
                    </tbody>
